@model DegreeModel;

@{
    ViewData["Title"]="Alta de Carrera";
}

    <div class="text-center">
        <h1 class="display-2">Alta de Carrera</h1>
    </div>

    

<form asp-controller="Degree" asp-action="DegreeAdd">
    <div class="mb-3">
        <label for="nombre"  class="form-label"> Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba la Carrera" />

    </div>
    <div asp-validation-summary="All" class="Text-danger"></div>

    <button type="submit" class="btn btn-primary">Guardar</button>

    <a asp-controller="Degree" asp-action="DegreeList" class="btn btn-secundary mb-3"> Regresar </a>

</form>